{
  "name": "weatherbar",
  "displayName": "WeatherBar",
  "description": "Show the weather at the bottom of the screen",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.35.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.weatherBar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.weatherBar",
        "title": "Weather Bar"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Weather Bar Config",
      "properties": {
        "weatherBar.zipCode": {
          "type": "number",
          "default": 12345,
          "description": "ZIP Code for the weather."
        },
        "weatherBar.interval": {
          "type": "number",
          "default": null,
          "description": "Specifies the refresh interval for fetching the weather."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "axios": "0.19.0",
    "dotenv": "8.0.0"
  }
}
